<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabla de Clientes y Empleados</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 20px;
        }

        h2 {
            color: #333;
            border-bottom: 2px solid #ccc;
            padding-bottom: 5px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            border-radius: 8px; /* Bordes redondeados */
            overflow: hidden; /* Asegura que los bordes redondeados se apliquen correctamente */
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center; /* Centro del texto */
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        a {
            text-decoration: none;
            color: #3498db;
        }

        a:hover {
            color: #2980b9;
        }

        .edit {
            margin-right: 5px;
        }

        .delete {
            color: #e74c3c;
        }

    </style>
</head>

<body>

    <h2>Tabla de Clientes</h2>

    <table>
        <thead>
            <tr>
                <th>Client Cod</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Postal Code</th>
                <th>Area</th>
                <th>Phone</th>
                <th>Representative Code</th>
                <th>Credit Limit</th>
                <th>Remarks</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for client in clientResults %}
            <tr>
                <td>{{ client.getCLIENTE_COD() }}</td>
                <td>{{ client.getNOMBRE() }}</td>
                <td>{{ client.getDIREC() }}</td>
                <td>{{ client.getCIUDAD() }}</td>
                <td>{{ client.getESTADO() }}</td>
                <td>{{ client.getCOD_POSTAL() }}</td>
                <td>{{ client.getAREA() }}</td>
                <td>{{ client.getTELEFONO() }}</td>
                <td>{{ client.getREPR_COD() }}</td>
                <td>{{ client.getLIMITE_CREDITO() }}</td>
                <td>{{ client.getOBSERVACIONES() }}</td>
                <td>
                    <a href="http://localhost/UD4/Ej3_Doctrine/public/Index.php/detail/{{ client.getCLIENTE_COD() }}"
                        class="edit">[U]</a>
                    <a href="http://localhost/UD4/Ej2_Doctrine/public/Index.php/delete/{{ client.getCLIENTE_COD() }}"
                        class="delete">[X]</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <h2>Tabla de Empleados</h2>

    <table>
        <thead>
            <tr>
                <th>Employee No</th>
                <th>Last Name</th>
                <th>Job Title</th>
                <th>Manager</th>
                <th>Hire Date</th>
                <th>Salary</th>
                <th>Commission</th>
                <th>Department No</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for employee in empResults %}
            <tr>
                <td>{{ employee.getEMP_NO() }}</td>
                <td>{{ employee.getAPELLIDOS() }}</td>
                <td>{{ employee.getOFICIO() }}</td>
                <td>{{ employee.getJEFE() }}</td>
                <td>{{ employee.getFECHA_ALTA() ? employee.getFECHA_ALTA()|date('Y-m-d') : '' }}</td>
                <td>{{ employee.getSALARIO() }}</td>
                <td>{{ employee.getCOMISION() }}</td>
                <td>{{ employee.getDEPT_NO() }}</td>
                <td>
                    <a href="http://localhost/UD4/Ej3_Doctrine/public/Index.php/detail/{{ employee.getEMP_NO() }}"
                        class="edit">[U]</a>
                    <a href="http://localhost/UD4/Ej2_Doctrine/public/Index.php/delete/{{ employee.getEMP_NO() }}"
                        class="delete">[X]</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</body>

</html>
