{% extends "base.html.twig" %}

{% block content %}
<style>
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

th, td {
    border: 1px solid #8a6d3b;
    padding: 12px;
    text-align: left;
}

th {
    background-color: #d2b48c;
    color: #fff;
}

tr:nth-child(even) {
    background-color: #f5f5f5;
}

tr:hover {
    background-color: #e0c68f;
}

.actions {
    display: flex;
    justify-content: space-between;
}

.actions a {
    text-decoration: none;
    padding: 8px 16px;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.edit {
    background-color: #b8860b;
    color: #fff;
}

.delete {
    background-color: #8b4513;
    color: #fff;
}

.edit:hover,
.delete:hover {
    background-color: #996515;
}
</style>
    <table>
        <thead>
            <tr>
                <th>TITLE</th>
                <th>CREATION DATE</th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
            {% for row in resultados %}
                <tr>
                    <td>{{ row.getTitulo }}</td>
                    <td>{{ row.getFecha_creacion | date("d/m/Y") }}</td>
                    <td class="actions">
                        <a href="#" class="edit">[X]</a>
                        <a href="#" class="delete">[U]</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock content %}
